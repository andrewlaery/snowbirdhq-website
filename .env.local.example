# Copy this file to .env.local and fill in your actual values

# Resend API Key (for contact forms)
RESEND_API_KEY=your_resend_api_key_here

# Supabase (Authentication)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Email allowlists (comma-separated)
# Staff can access: guest guides, owner-docs, internal
# Owners can access: guest guides, owner-docs
OWNER_EMAILS=owner1@example.com,owner2@example.com
STAFF_EMAILS=staff1@example.com,staff2@example.com

# Per-owner property scoping (semicolon-separated entries, colon between email and slugs)
# Owners in OWNER_PROPERTIES get access only to their listed properties.
# Owners in OWNER_EMAILS but NOT in OWNER_PROPERTIES get access to all properties (legacy fallback).
OWNER_PROPERTIES=owner1@example.com:25-dublin,7-suburb;owner2@example.com:1-34-shotover

# Guest token signing secret (generate with: openssl rand -hex 32)
GUEST_TOKEN_SECRET=your-random-secret-here